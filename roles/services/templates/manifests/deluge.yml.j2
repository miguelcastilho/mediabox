---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: deluge
  namespace: media
spec:
  replicas: 1
  selector:
    matchLabels:
      app: deluge
  template:
    metadata:
      labels:
        app: deluge
    spec:
      containers:
        - name: deluge
          image: lscr.io/linuxserver/deluge:2.1.1
          env:
            - name: PUID
              value: "1000"
            - name: PGID
              value: "1000"
          ports:
            - containerPort: 8112
              name: webui
            - containerPort: 6881
              name: inbound
            - containerPort: 6881
              protocol: UDP
              name: inbound-udp
          volumeMounts:
            - name: config-volume
              mountPath: /config
            - name: downloads-volume
              mountPath: /downloads
            - name: localtime-volume
              mountPath: /etc/localtime
              readOnly: true
      volumes:
        - name: config-volume
          hostPath:
            path: {{ data_path }}/deluge
        - name: downloads-volume
          hostPath:
            path: {{ data_path }}/downloads
        - name: localtime-volume
          hostPath:
            path: /etc/localtime

---
apiVersion: v1
kind: Service
metadata:
  name: deluge
  namespace: media
spec:
  selector:
    app: deluge
  ports:
    - protocol: TCP
      port: 8112
      targetPort: webui
      name: webui
    - protocol: TCP
      port: 6881
      targetPort: inbound
      name: inbound
    - protocol: UDP
      port: 6881
      targetPort: inbound-udp
      name: inbound-udp

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: deluge
  namespace: media
  annotations:
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    traefik.ingress.kubernetes.io/router.tls: "true"
    cert-manager.io/cluster-issuer: letsencrypt
spec:
  ingressClassName: traefik
  rules:
    - host: deluge.{{ domain }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: deluge
                port:
                  number: 8112
  tls:
    - secretName: deluge-service-cert
      hosts:
        - deluge.{{ domain }}