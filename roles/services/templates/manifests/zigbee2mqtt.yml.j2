---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: zigbee2mqtt
  namespace: infra
spec:
  replicas: 1
  selector:
    matchLabels:
      app: zigbee2mqtt
  template:
    metadata:
      labels:
        app: zigbee2mqtt
    spec:
      containers:
        - name: zigbee2mqtt
          image: koenkk/zigbee2mqtt:1.33.0
          ports:
            - containerPort: 8080
              name: ui
          volumeMounts:
            - name: data-volume
              mountPath: /app/data
            - name: udev-volume
              mountPath: /run/udev
              readOnly: true
          env:
            - name: TZ
              value: {{ timezone }}
          securityContext:
            privileged: true
      volumes:
        - name: data-volume
          hostPath:
            path: {{ data_path }}/zigbee2mqtt
        - name: udev-volume
          hostPath:
            path: /run/udev

---
apiVersion: v1
kind: Service
metadata:
  name: zigbee2mqtt
  namespace: infra
spec:
  selector:
    app: zigbee2mqtt
  ports:
    - protocol: TCP
      port: 8082
      targetPort: ui
  type: LoadBalancer

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: zigbee2mqtt
  namespace: infra
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  ingressClassName: traefik
  rules:
    - host: zigbee2mqtt.{{ domain }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: zigbee2mqtt
                port:
                  number: 8082