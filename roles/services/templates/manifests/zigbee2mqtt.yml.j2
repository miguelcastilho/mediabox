---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: zigbee2mqtt
  namespace: infra
spec:
  replicas: 1
  selector:
    matchLabels:
      app: zigbee2mqtt
  template:
    metadata:
      labels:
        app: zigbee2mqtt
      annotations:
        diun.enable: "true"
        diun.watch_repo: "true"
        diun.exclude_tags: "arm"
    spec:
      containers:
        - name: zigbee2mqtt
          image: koenkk/zigbee2mqtt:1.33.2
          ports:
            - containerPort: 8080
              name: ui
          volumeMounts:
            - name: data-volume
              mountPath: /app/data
            - name: udev-volume
              mountPath: /run/udev
              readOnly: true
          env:
            - name: TZ
              value: {{ timezone }}
          securityContext:
            privileged: true
      volumes:
        - name: data-volume
          hostPath:
            path: {{ data_path }}/zigbee2mqtt
        - name: udev-volume
          hostPath:
            path: /run/udev

---
apiVersion: v1
kind: Service
metadata:
  name: zigbee2mqtt
  namespace: infra
spec:
  selector:
    app: zigbee2mqtt
  ports:
    - protocol: TCP
      port: 8080
      targetPort: ui

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: zigbee2mqtt
  namespace: infra
  annotations:
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    traefik.ingress.kubernetes.io/router.tls: "true"
    cert-manager.io/cluster-issuer: letsencrypt
spec:
  ingressClassName: traefik
  rules:
    - host: zigbee2mqtt.{{ domain }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: zigbee2mqtt
                port:
                  number: 8080
  tls:
    - secretName: zigbee2mqtt-service-cert
      hosts:
        - zigbee2mqtt.{{ domain }}