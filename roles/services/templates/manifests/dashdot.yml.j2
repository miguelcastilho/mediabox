---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: dashdot
  namespace: infra
spec:
  replicas: 1
  selector:
    matchLabels:
      app: dashdot
  template:
    metadata:
      labels:
        app: dashdot
      annotations:
        diun.enable: "true"
        diun.watch_repo: "true"
        diun.exclude_tags: "sha-;feature;dev;latest"
    spec:
      containers:
        - name: dashdot
          image: mauricenino/dashdot:5.5
          env:
            - name: DASHDOT_ACCEPT_OOKLA_EULA
              value: "true"
          volumeMounts:
            - name: host
              mountPath: /mnt/host
              readOnly: true
          ports:
            - containerPort: 3001
              name: webui
      volumes:
        - name: host
          hostPath:
            path: /

---
apiVersion: v1
kind: Service
metadata:
  name: dashdot
  namespace: infra
spec:
  selector:
    app: dashdot
  ports:
    - protocol: TCP 
      port: 3002
      targetPort: webui

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: dashdot
  namespace: infra
  annotations:
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    traefik.ingress.kubernetes.io/router.tls: "true"
    cert-manager.io/cluster-issuer: letsencrypt
spec:
  ingressClassName: traefik
  rules:
    - host: dashdot.{{ domain }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: dashdot
                port:
                  number: 3002
  tls:
    - secretName: dashdot-service-cert
      hosts:
        - dashdot.{{ domain }}