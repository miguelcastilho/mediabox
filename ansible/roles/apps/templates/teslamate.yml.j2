name: teslamate
services:
  main_app:
    cpu_shares: 10
    command: []
    container_name: teslamate
    deploy:
      resources:
        limits:
          memory: 256M
    environment:
      - DATABASE_HOST=teslamate-database
      - "DATABASE_NAME={{ teslamate_database_name }}"
      - "DATABASE_PASS={{ teslamate_database_password }}"
      - "DATABASE_USER={{ teslamate_database_user }}"
      - "ENCRYPTION_KEY={{ teslamate_database_encryption_key }}"
      - MQTT_HOST=mqtt
    hostname: teslamate
    image: teslamate/teslamate:1.28.5
    labels:
      icon: https://upload.wikimedia.org/wikipedia/commons/e/e8/Tesla_logo.png
    ports:
      - target: 4000
        published: "4000"
        protocol: tcp
    restart: unless-stopped
    volumes:
      - type: bind
        source: "{{ data_path }}/teslamate/teslamate"
        target: /opt/app/import
    user: "1000"
    devices: []
    cap_add: []
    networks:
      - app
    privileged: false
networks:
  app:
    name: app
x-casaos:
  author: self
  category: self
  hostname: ""
  icon: https://upload.wikimedia.org/wikipedia/commons/e/e8/Tesla_logo.png
  index: /
  is_uncontrolled: false
  port_map: "4000"
  scheme: http
  store_app_id: teslamate
  title:
    custom: Teslamate
